/// Attachment File entity.
///
/// Represents files that can be attached to post and comment snapshots as
/// attachments.
///
/// @namespace BBS
model bbs_files {
  //----
  // COLUMNS
  //----
  /// Primary Key.
  ///
  /// @format uuid
  id String @id @db.Uuid

  /// File name, without extension.
  ///
  /// If there's file ".gitignore", then its name is an empty string.
  ///
  /// @maxLength 255
  name String @db.VarChar

  /// File extension.
  ///
  /// Possible to omit (nullable), e.g. "README"
  ///
  /// @maxLength 32
  extension String? @db.VarChar

  /// Downloadable URL to access file content.
  ///
  /// @format uri
  url String @unique @db.VarChar(1024)

  /// Creation time of file record.
  created_at DateTime @db.Timestamptz

  //----
  // RELATIONS
  //----
  post_attachments    bbs_post_snapshot_attachments[]
  comment_attachments bbs_comment_snapshot_attachments[]
}
